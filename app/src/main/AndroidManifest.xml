<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotlinLearning"
        tools:targetApi="31">
        <activity
            android:name=".State"
            android:exported="false"
            android:label="@string/title_activity_state"
            android:theme="@style/Theme.KotlinLearning" />
        <activity
            android:name=".StylingText"
            android:exported="false"
            android:label="@string/title_activity_styling_text"
            android:theme="@style/Theme.KotlinLearning" />
        <activity
            android:name=".ImageCardComposable"
            android:exported="false"
            android:label="@string/title_activity_image_card_composable"
            android:theme="@style/Theme.KotlinLearning" />
        <activity
            android:name=".RowsAndColumn"
            android:exported="false"
            android:label="@string/title_activity_rows_and_column"
            android:theme="@style/Theme.KotlinLearning" />
        <activity
            android:name=".Modifiers"
            android:exported="false"
            android:label="@string/title_activity_modifiers"
            android:theme="@style/Theme.KotlinLearning" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.KotlinLearning">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>